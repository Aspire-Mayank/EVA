#:kivy 1.0.9
# ref: https://kivy.org/docs/tutorials/pong.html

<Car>:
    size: 20, 10
    origin: 10, 5
    canvas:
        PushMatrix
        Rotate:
            angle: self.angle
            origin: self.center
        Rectangle:
            pos: self.pos
            size: self.size
            source: "./images/ship.png"
        PopMatrix

<Game>:
    car: game_car
    canvas:
        Rectangle:
            pos: self.pos
            size: 960, 720
            source: "./images/p2s7_CoreMap.png"

    Car:
        id: game_car